{# THIS IS THE PREVIEW FOR THE PROJECTS ON THE MAIN PAGE #}

<div
  class="flex flex-col md:flex-row {% if reverse %}md:flex-row-reverse{% endif %} items-center gap-8"
>
  <div class="flex-1">
    <h3 class="text-xl font-bold">
      <a href="{{ url }}" class="hover:underline">{{ title }}</a>
    </h3>
    <ul class="mt-2 list-disc list-inside text-gray-600">
      {% for item in items %}
      <li>{{ item }}</li>
      {% endfor %}
    </ul>
  </div>
  <div class="flex-1">
    <img
      src="{{ img }}"
      alt="{{ title }} image"
      class="w-full h-auto bg-gray-300"
    />
  </div>
</div>
